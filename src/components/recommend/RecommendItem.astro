---
import '../GlobalCSS.astro'
import LinkList from './LinkList.astro'
interface Props {
    iconURL?: string,
    iconAvgColor: string
    name?: string,
    description?: string
    links?,
};

const { iconURL = '', iconAvgColor,description,name = '', links } = Astro.props;
---

<style define:vars={{iconAvgColor}}>
    div {
        margin: 0
    }
    div.recommendItem {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-content: center;
        width: 98%;
        height: 100%;
        box-shadow: 8px 20px 50px 12px rgba(0, 0, 0, 0.247);
        border-radius: 1rem;
        background-color: var(--iconAvgColor);
        overflow: hidden;
    }

    div img {
        height: 100%;
        border-radius: 0.3rem;
        max-height: 7.5rem;
    }

    div h3 {
        margin-top: 0.2rem;
        margin-bottom: 0.6rem;
        display: inline-block;
    }

    div.recommendItem>div{
        margin-left: 0.5rem
    }

    p.recommend-text {
        font-size: 0.8rem;
        margin-top: 0;
    }

</style>


<div class="recommendItem">
    <img src={iconURL}/>
    <div>
        <h3 class="font-regular">{name}</h3>
        <p class="recommend-text">{description}</p>
        <LinkList links={links} />
    </div>
</div>